alias gethr='geth --rinkeby'
alias btcl='bitcoin-cli -testnet'
alias ....='cd ../..'
alias ..='cd ../'
alias :e=vim
alias :qa=exit
alias :sp='test -n "$TMUX" && tmux split-window'
alias :vs='test -n "$TMUX" && tmux split-window -h'
alias :wq=exit
alias a=ag
alias b=bundle
alias be='bundle exec'
alias cd..='cd ..'
alias cdtmp='cd $(mktemp -d $TMPDIR/$USER-cdtmp-XXXXXX)'
alias clip='nc -U ~/.clipper.sock'
alias e=exit
alias g=git
alias groot='cd $(git rev-parse --show-toplevel 2> /dev/null || echo -n ".")'
alias h=history
alias j=jump
alias l='ls -F'
alias ll='ls -laFT'
alias m=mosh
alias o='git oneline'
alias p='git patch'
alias prettyjson='python -m json.tool'
alias oo='git oneline -10'
alias s=ssh
alias serve='python -m SimpleHTTPServer' # optional arg: port (defaults to 8000)
alias t=tmux
alias v=nvim
alias vim=nvim
alias pa='php artisan'
alias gcm='git commit'
alias ssh_loc_server='ssh artem@192.168.0.102'
alias kcl='kubectl'
alias cl='clear'
alias phpp="php -d xdebug.profiler_enable=1"
alias phpa="php -d xdebug.mode=develop,debug,coverage"
alias cphp8="brew unlink php && brew link php@8.0"
alias cphp7="brew unlink php && brew link php@7.3"
alias cphp="brew unlink php && brew link php"
alias lzd='lazydocker'
alias pw='vim ~/Documents/docs/pw.txt'
