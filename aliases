#debug,coverage Global aliases
# (work at any position within the command line)
#

# Mnemonic: "[C]lip"
alias -g C="|clip"

# Mnemonic: "[G]rep"
alias -g G="|grep"

# Mnemonic: "[H]ead"
alias -g H="|head"

# Pretty-print JSON.
# Mnemonic: "[J]SON"
alias -g J="|python -m json.tool"

# Mnemonic: "[L]ess"
alias -g L="|less"

# Mnemonic: "[R]eset"
alias -g R=";clear;test -n "$TMUX" && tmux clear-history;"

alias d="docker"
alias dc="docker-compose"
alias dce="docker-compose exec"
alias t="tmux"
alias g="git"
alias docker_es="cd ~/www/EssayDaddy/docker/developers/local/admin"
alias docker_tu="cd ~/www/Tutoriage/docker/developers/local/frontProxy"

alias dcuposx="docker-compose -f docker-compose.yml -f docker-compose.osx.yml up"

alias dcoosx="docker-compose -f docker-compose.yml -f docker-compose.osx.yml"
alias dcdnosx="dcoosx down"
alias dceosx="dcoosx exec"
alias dclosx="dcoosx logs"
alias dclfosx="dcoosx logs -f"
alias dcpsosx="dcoosx ps"
alias dcuposx="dcoosx up"

# Servers
[ -f $MY_ZSH/local_aliases ] && source $MY_ZSH/local_aliases
